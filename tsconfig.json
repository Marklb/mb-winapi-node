{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "removeComments": true,
    "target": "es5",
    "lib": [
      "es2015",
      "es2016"
    ],
    "types": [
      "node",
      "ffi",
      "ref"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
